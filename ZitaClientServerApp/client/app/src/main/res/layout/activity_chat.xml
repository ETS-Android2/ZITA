<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.activity.ChatResponseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/deviceNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="27sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:hint="Device Name" />

        <TextView
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textView_style"
            android:text="Common secret" />

        <EditText
            android:id="@+id/txt_key"
            style="@style/editText_style"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:editable="false"
            android:ems="10"
            android:gravity="center"
            android:hint="Private key"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:textColor="#fa0206" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Updated Common Secret:" />

        <TextView
            android:id="@+id/txt_encrypted"
            style="@style/textview"
            android:layout_width="371dp"
            android:layout_height="149dp"

            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="0dp"
            android:hint=""
            android:maxLines="5"
            android:padding="15dp"
            android:scrollbars="vertical"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/btnSend"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:layout_marginTop="17dp"
            android:cropToPadding="false"
            android:onClick="send"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sendd" />

    </LinearLayout>
</RelativeLayout>
